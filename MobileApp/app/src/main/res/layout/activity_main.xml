<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/moodInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your mood" />

    <EditText
        android:id="@+id/stageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your bipolar stage" />

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your age"
        android:inputType="number" />

    <EditText
        android:id="@+id/genderInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your gender (Male/Female)" />

    <Button
        android:id="@+id/getRecommendationsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Recommendations" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />
</LinearLayout>
