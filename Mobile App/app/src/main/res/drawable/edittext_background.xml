<!-- res/drawable/edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Light gray border -->

    <!-- Rounded Corners -->
    <corners android:radius="8dp" /> <!-- Rounded corners -->

    <!-- Padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>