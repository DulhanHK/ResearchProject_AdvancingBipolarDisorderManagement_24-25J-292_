    <!-- Isolation Metrics Section -->
    <TextView
        android:id="@+id/steps_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/teal_800"
        android:drawableStart="@drawable/directions_walk_24px"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Steps: 0"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/teal_800"
        android:drawableStart="@drawable/accessibility_24px"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Status: ?"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/steps_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_moving_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/teal_800"
        android:drawableStart="@drawable/schedule_24px"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:text="Moving Time: 0 seconds"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/time_stationary_text"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <TextView
        android:id="@+id/time_stationary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/teal_800"
        android:drawableStart="@drawable/schedule_24px"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:text="Stationary Time: 0 seconds"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintStart_toEndOf="@id/time_moving_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/isolation_status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/teal_800"
        android:drawableStart="@drawable/person_off_24px"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:text="Isolated Status: Not Isolated"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/time_moving_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Service Statuses Section -->


    <TextView
        android:id="@+id/audio_emotion_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/purple_600"
        android:drawableStart="@drawable/graphic_eq_24px"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:text="Audio Emotion: Unknown"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/isolation_status_text"
        app:layout_constraintStart_toEndOf="@id/text_emotion_text"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Emotion Values Section -->
    <TextView
        android:id="@+id/text_emotion_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/purple_600"
        android:drawableStart="@drawable/chat_bubble_24px"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:text="Text Emotion: Unknown"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/isolation_status_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/audio_emotion_text"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <TextView
        android:id="@+id/step_service_status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/amber_700"
        android:drawableStart="@drawable/settings_24px"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:text="Step Service: Not Running"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/audio_service_status_text"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/audio_service_status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/amber_700"
        android:drawableStart="@drawable/settings_24px"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:text="Audio Service: Not Running"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/browser_service_status_text"
        app:layout_constraintStart_toEndOf="@id/step_service_status_text" />

    <TextView
        android:id="@+id/browser_service_status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/amber_700"
        android:drawableStart="@drawable/settings_24px"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:text="Browser Service: Not Running"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/audio_service_status_text" />
</androidx.constraintlayout.widget.ConstraintLayout>